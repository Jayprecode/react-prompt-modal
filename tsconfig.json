{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports":true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "dist"]
}